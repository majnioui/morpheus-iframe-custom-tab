<div>
    {{#if error}}
        <div style="color: red; font-weight: bold;">Error: {{error}}</div>
    {{/if}}
    <h2>UI Extensions</h2>
    {{#if uiExtensions}}
        <ul>
        {{#each uiExtensions}}
            <li style="margin-bottom: 1em;">
                <strong>Name:</strong> {{pluginName}}<br/>
                <strong>Description:</strong> {{description}}<br/>
                <strong>Version:</strong> {{version}}<br/>
                <strong>Enabled:</strong> {{enabled}}<br/>
                <strong>ID:</strong> {{id}}<br/>
            </li>
        {{/each}}
        </ul>
    {{else}}
        <p>No UI extensions found or failed to load.</p>
    {{/if}}
</div>
