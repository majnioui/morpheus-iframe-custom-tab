<div>
    {{#if error}}
        <div style="color: red; font-weight: bold;">Error: {{error}}</div>
    {{/if}}
    <h2>Organizations</h2>
    {{#if orgs}}
        <ul>
        {{#each orgs.values}}
            <li><strong>{{name}}</strong> (ID: {{id}})</li>
        {{/each}}
        </ul>
    {{else}}
        <p>No organizations found or failed to load.</p>
    {{/if}}
</div>
